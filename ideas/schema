CREATE TABLE patient (
    patient_id SERIAL PRIMARY KEY,
    first_name TEXT,
    last_name TEXT,
    other_names TEXT,
    date_of_birth INTEGER,
    address TEXT,
    email TEXT,
    sex_chromosome VARCHAR(2),
    blood_type TEXT,
    phone TEXT,
    medical_history TEXT,
    emergency_contact_name TEXT,
    emergency_contact_phone TEXT,
    insurance_provider TEXT,
    insurance_policy_number TEXT
);

CREATE TABLE healthcare_professionals (
    professional_id SERIAL PRIMARY KEY,
    first_name TEXT,
    last_name TEXT,
    other_names TEXT,
    email TEXT,
    phone TEXT,
    category_name TEXT,
    category_id TEXT,
    license TEXT,
    schedule TEXT
);

CREATE TABLE session (
    session_id SERIAL PRIMARY KEY,
    patient_id INTEGER REFERENCES patient(patient_id),
    arrival_timestamp INTEGER,
    departure_timestamp INTEGER,
    session_type TEXT, /* (e.g., consultation, follow-up, emergency) */
    temperature INTEGER,
    systol_blood_pressure INTEGER,
    diastol_blood_pressure INTEGER,
    test_id INTEGER REFERENCES medical_tests(test_id),
    prescription_id INTEGER REFERENCES prescriptions(prescription_id),
    complaint TEXT,
    notes TEXT
);

CREATE TABLE appointments (
    appointment_id SERIAL PRIMARY KEY,
    patient_id INTEGER REFERENCES patient(patient_id),
    physician_id INTEGER REFERENCES doctors(doctor_id),
    appointment_date INTEGER,
    appointment_time TEXT,
    status TEXT
);

CREATE TABLE medical_tests (
    test_id SERIAL PRIMARY KEY,
    patient_id INTEGER REFERENCES patient(patient_id),
    test_name TEXT,
    test_date INTEGER,
    results TEXT,
    physician_id INTEGER REFERENCES doctors(doctor_id)
);

CREATE TABLE prescriptions (
    prescription_id SERIAL PRIMARY KEY,
    patient_id INTEGER REFERENCES patient(patient_id),
    physician_id INTEGER REFERENCES doctors(doctor_id),
    medication_name TEXT,
    dosage TEXT,
    start_date INTEGER,
    end_date INTEGER,
    instructions TEXT
);

CREATE TABLE doctors (
    doctor_id SERIAL PRIMARY KEY,
    professional_id INTEGER REFERENCES healthcare_professionals(professional_id),
    specialization TEXT,
    years_of_experience INTEGER
    ... more data
);

CREATE TABLE nurses {
    nurse_id SERIAL PRIMARY KEY,
    professional_id INTEGER REFERENCES healthcare_professionals(professional_id),
    specialization TEXT,
    years_of_experience INTEGER,
    current_shift TEXT
    ... will add more things later
}

CREATE TABLE lab_technicians {
    technician_id PRIMARY KEY,
    professional_id INTEGER REFERENCES healthcare_professionals(professional_id),
    ... will add more things later
}